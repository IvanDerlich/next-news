{
  "name": "routing-rendering",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run init && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "init": "npm run removeDb && npm run transpile && node db/temp && npm run remove",
    "transpile": "tsc db/init/index.ts -outDir db/temp",
    "removeDb": "npm run remove && rm db/data.db",
    "remove": "rm -rf db/temp"
  },
  "dependencies": {
    "better-sqlite3": "^11.1.2",
    "next": "14.1.0",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "20.12.13",
    "@types/react": "18.3.3",
    "typescript": "5.4.5"
  }
}
